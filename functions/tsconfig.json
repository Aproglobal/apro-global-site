{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,

    // ðŸ‘‡ important bits
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true,

    // optional but nice to have in Node 20
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["lib", "node_modules"]
}
